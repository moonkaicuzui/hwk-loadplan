# Rachgia Dashboard Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Firebase Configuration
# =============================================================================
# Get these from Firebase Console > Project Settings > Your apps

FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# =============================================================================
# Google Sheets API (Future - for real-time data integration)
# =============================================================================
# Get these from Google Cloud Console > APIs & Services > Credentials

# GOOGLE_API_KEY=your-google-api-key
# GOOGLE_SPREADSHEET_ID=your-spreadsheet-id
# GOOGLE_SHEET_NAME=Sheet1

# =============================================================================
# Application Settings
# =============================================================================

# Default language (ko, en, vi)
DEFAULT_LANGUAGE=ko

# Enable AI Analytics features
ENABLE_AI_ANALYTICS=true

# Enable offline mode (PWA)
ENABLE_OFFLINE_MODE=true

# Cache TTL in minutes
CACHE_TTL_MINUTES=35

# =============================================================================
# Development Settings
# =============================================================================

# Local server port
DEV_SERVER_PORT=8080

# Enable debug logging
DEBUG=false

# =============================================================================
# Production Settings
# =============================================================================

# Base URL for production
# PRODUCTION_URL=https://your-domain.com

# Enable error tracking (e.g., Sentry)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# Notes
# =============================================================================
#
# 1. Firebase is currently used for QMS (Quality Management System)
# 2. Google Sheets API is planned for future real-time data integration
# 3. Never commit actual API keys to version control
# 4. Use Firebase environment config for production deployments
#
