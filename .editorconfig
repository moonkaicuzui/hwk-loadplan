# EditorConfig - https://editorconfig.org
# Rachgia Dashboard Project

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2
