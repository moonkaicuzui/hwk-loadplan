# Rachgia Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# ========================================
# Firebase Configuration
# ========================================
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ========================================
# Google API Configuration
# ========================================
VITE_GOOGLE_API_KEY=your_google_api_key
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GOOGLE_SPREADSHEET_ID=your_spreadsheet_id
VITE_GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# ========================================
# Application Settings
# ========================================
# Default language (ko, en, vi)
VITE_DEFAULT_LANGUAGE=ko

# Cache TTL in minutes
VITE_CACHE_TTL_MINUTES=5

# Enable demo mode (allows demo login)
VITE_ENABLE_DEMO_MODE=true
